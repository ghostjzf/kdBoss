/* pages/addStore/addStore.wxss */
.add-store{
  font-size: 34rpx;
}
.section {
  padding: 20rpx;
  border-bottom: 1px #ececec solid;
  background-color: #fff;
}

.section-title {
  min-width: 150rpx;
}

.section-input {
  width: 100%;
  height: 60rpx;
  margin-left: 20rpx;
}

.picker {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  position: relative;
}

.picker::after {
  content: "";
  display: block;
  top: 50%;
  width: 10px;
  height: 10px;
  border-top: 2px solid #ddd;
  border-right: 2px solid #ddd;
  position: absolute;
  right: 20rpx;
  transform: translateY(-50%) rotate(45deg);
}

.image {
  width: 100%;
}

.upload-text {
  color: #179B16;
  margin-left: 20rpx;
}

.flex {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.btn-area {
   padding-bottom: 34px;
}