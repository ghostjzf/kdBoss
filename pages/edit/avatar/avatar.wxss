.container {
  min-height: 100vh;
  background-color: #333333;
  display: flex;
  align-items: center;
}

.img {
  width: 100%;
}

.menu-mask {
  position: absolute;
  width: 100%;
  height: 100vh;
  bottom: -100vh;
}

.menu {
  position: absolute;
  width: 100%;
  bottom: 0;
}

.menu-item {
  background-color: #fff;
  padding: 20rpx;
  margin-top: 4rpx;
  text-align: center;
}

.btn-cancel {
  margin-top: 16rpx;
  color: red;
}