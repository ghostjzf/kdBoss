<view class="container">
  <view class='item item-avatar' bindtap='editAvatar'>
    <view>门店头像</view>
    <image class='avatar' mode="aspectFill" src='http://172.25.6.161:9999/api/customer{{detail.image}}?phoneno={{detail.phoneno}}'></image>
  </view>
  <view class='item'>
    <view>门店名称</view>
    <view>{{detail.name}}</view>
  </view>
  <view class='item'>
    <view>门店类型</view>
    <view>{{detail.type}}</view>
  </view>
  <view class='item'>
    <view>门店地址</view>
    <view>{{detail.address}}</view>
  </view>
  <view class='item'>
    <view>精品图片</view>
    <view></view>
  </view>
</view>
